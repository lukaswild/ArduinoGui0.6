<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_projekt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/background2"
    tools:context="com.example.arduinogui.MainActivity"
    tools:ignore="MergeRootFrame"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kein Projekt vorhanden ! Geben Sie einen Namen fÃ¼r ein neues Projekt ein."
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|top" />

    <EditText
        android:id="@+id/proNamePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintProName" >

    </EditText>
    <Button
        android:id="@+id/DialogProBtnSubmit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/btnSubmit"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>

</FrameLayout>