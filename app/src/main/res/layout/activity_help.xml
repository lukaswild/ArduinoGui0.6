            <TextView
                android:id="@+id/tvHelpA5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strHelpA5"
                android:textSize="@dimen/textsize_help_answer" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

