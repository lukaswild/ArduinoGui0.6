                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strHelpA1"
                android:textSize="@dimen/textsize_help_answer" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tvHelpH2"
